function msg_to_ii($echo,$msg,$username,$addr,$time,$receiver,$subj) {
    checkEcho($echo);
    $msgwrite.="$echo
$time
$username
$addr
$receiver
$subj\n\n$msg";
    @$echofile=fopen("echo/".$echo,"a");
    @fputs($echofile,$msgid."\n"); fclose($echofile);
    @$msgfile=fopen("msg/".$msgid,"w");
    @fputs($msgfile,$msgwrite); fclose($msgfile);
}
